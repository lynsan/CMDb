@model List<ProjMovie.Models.ViewModels.MovieViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CMDB movieProject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link href="~/css/main.css" rel="stylesheet" />">
    <link href="~/css/search.css" rel="stylesheet" />
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <script src="~/js/main.js"></script>
</head>
<body>
    <header>
        <a href="@Url.Action("", "Home")">
            <h1>CMDb</h1>
        </a>
    </header>
    <div class="content-wrapper">
        <div class="content">

            <div class="search-box" id="search-box">
                <input id="search-txt" class="search-txt" type="text" placeholder="Search" oninput="search(event)">
                <a class="search-btn" href="#" onclick="searchPageRoute()">
                    <i class="fas fa-search"></i>
                </a>
                <ul id="result-list">
                    <li>
                        <a id="firstLink" href="#">
                            <div id="first"></div>
                        </a>
                    </li>
                    <li class="collapse">
                        <a id="secondLink" href="#">
                            <div id="second"></div>
                        </a>
                    </li>
                    <li class="collapse">
                        <a id="thirdLink" href="#">
                            <div id="third"></div>
                        </a>
                    </li>
                    <li class="collapse">
                        <a id="fourthLink" href="#">
                            <div id="fourth"></div>
                        </a>
                    </li>
                </ul>
            </div>
            <ul class="search-list">
                @foreach (var film in Model)
                {

                    <li>
                        <a href="/Detail/Index/@film.Movie.ImdbID">
                            <div class="search-item">
                                <img src="@film.Movie.Poster" alt="Movie poster" onerror="this.onerror=null; this.src='/Images/poster.jpg'">
                                <div class="mov-info">
                                    <h1>@film.Movie.Title</h1>
                                    <p>Year: @film.Movie.Year</p>
                                    <p>Runtime: @film.Movie.Runtime</p>
                                    <p>Language: @film.Movie.Language</p>
                                    <p>Genre: @film.Movie.Genre</p>
                                    <p>Rating: @film.Ratings.Rating</p>
                                </div>
                            </div>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <footer>
            <ul class="footer-links">
                <li>
                    <a href="#">
                        <div class="logo">
                            <img src="/Images/FacebookBW.jpg" alt="facebook">
                        </div>
                        <div class="hover-img">
                            <img src="/Images/FacebookColor.jpg" alt="facebook">
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img class="logo" src="/Images/InstagramBW.jpg" alt="instagram">
                        <img class="hover-img" src="/Images/InstagramColor.jpg" alt="instagram">
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img class="logo" src="/Images/TwitterBW.jpg" alt="twitter">
                        <img class="hover-img" src="/Images/twitterColor.jpg" alt="twitter">
                    </a>
                </li>
            </ul>
            <p class="copyright"><b>&copy; 2020 CMDb</b></p>
        </footer>
    </div>
</body>
</html>