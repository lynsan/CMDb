@model ProjMovie.Models.ViewModels.MovieViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CMDB movieProject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    <link href="~/css/detail.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <script src="~/js/main.js"></script>
</head>
<body>
    <div class="content-wrapper">
        <div class="content">
            <header>
                <h1>CMDb</h1>
            </header>
            <h2 class="detail-movie-title">@Model.Movie.Title</h2>
            <div class="single-movie">
                <img src="@Model.Movie.Poster" alt="Movie">
            </div>
            <div class="rate">
                <ul class="ratings">
                    <li onclick="likeBtnClick();" class="onHover" id="ListItemLike" data-imdbid="@Model.Movie.ImdbID">
                        <div>
                            <img src="/Images/likeBW.jpg" alt="">
                        </div>
                        <div class="hover">
                            <img src="/Images/likeColorOutline.jpg" alt="" id="likeHoverImg">
                        </div>

                    </li>
                    <li id="numberOfLikes">
                        <p>@Model.Ratings.NumberOfLikes</p>
                    </li>
                    <li onclick="dislikeBtnClick();" class="onHover" id="ListItemDislike" data-imdbid="@Model.Movie.ImdbID">
                        <div class=rateImg>
                            <img src="/Images/dislikeBW.jpg" alt="">
                        </div>
                        <div class="hover">
                            <img src="/Images/dislikeColorOutline.jpg" alt="" id=dislikeHoverImg>
                        </div>
                    </li>
                    <li id="numberOfDislikes">
                        <p>@Model.Ratings.NumberOfDislikes</p>
                    </li>
                </ul>
            </div>
            <div class="flex-container">
                <div class="movie-info-column1">
                    <div class="single-movie-info">
                        <p><b>Year:</b> @Model.Movie.Year</p>
                    </div>
                    <div class="single-movie-info">
                        <p><b>Genre:</b> @Model.Movie.Genre</p>
                    </div>
                </div>
                <div class="movie-info-column2">
                    <div class="single-movie-info">
                        <p><b>Runtime:</b> @Model.Movie.Runtime</p>
                    </div>
                    <div class="single-movie-info">
                        <p><b>Language:</b> @Model.Movie.Language</p>
                    </div>
                </div>
            </div>
            <div class="accordion">
                <div class="accordion-item">
                    <div class="accordion-item-header" onclick="ShowInfo()">
                        Plot
                    </div>
                    <div class="accordion-item-body">
                        <div class="accordion-item-body-content">
                            @Model.Movie.Plot
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <div class="accordion-item-header" onclick="ShowInfo()">
                        Actors
                    </div>
                    <div class="accordion-item-body">
                        <div class="accordion-item-body-content">
                            @Model.Movie.Actors
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <ul class="footer-links">
                <li>
                    <a href="#">
                        <div class="logo">
                            <img src="/Images/FacebookBW.jpg" alt="facebook">
                        </div>
                        <div class="hover-img">
                            <img src="/Images/FacebookColor.jpg" alt="facebook">
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img class="logo" src="/Images/InstagramBW.jpg" alt="instagram">
                        <img class="hover-img" src="/Images/InstagramColor.jpg" alt="instagram">
                    </a>
                </li>
                <li>
                    <a href="#">
                        <img class="logo" src="/Images/TwitterBW.jpg" alt="twitter">
                        <img class="hover-img" src="/Images/twitterColor.jpg" alt="twitter">
                    </a>
                </li>
            </ul>
            <p class="copyright"><b>&copy; 2020 CMDb</b></p>
        </footer>
    </div>
</body>
</html>